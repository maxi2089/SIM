<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent"
    android:background="@color/color_backgroud"

    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin">

    <ListView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/listView"
        android:footerDividersEnabled="false"
        android:headerDividersEnabled="false"
        android:divider="@drawable/abc_list_divider_mtrl_alpha"
        android:drawSelectorOnTop="true"
        android:layout_below="@+id/btnCrearLibReport"
        android:layout_alignRight="@+id/btnCrearLibReport"
        android:layout_alignEnd="@+id/btnCrearLibReport" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Pacientes"
        android:id="@+id/textView4"
        android:layout_alignParentTop="true"
        android:textColor="@color/color_texto"
        android:textStyle="bold"
        style="@style/Base.TextAppearance.AppCompat.Title"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="false"
        android:layout_toLeftOf="@+id/btnCrearLibReport"
        android:layout_toStartOf="@+id/btnCrearLibReport"
        android:layout_alignParentRight="false"
        android:layout_marginTop="11dp" />

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/btnCrearLibReport"
        android:src="@android:drawable/ic_input_add"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentTop="true"
        android:visibility="invisible" />
</RelativeLayout>
