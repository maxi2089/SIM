<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.example.maxi.sim.FarmacoFragment"
    android:background="#018B7B">

    <Spinner
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/listaPaciente"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />


    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/libroReport"
        android:background="@mipmap/ic_launcher"
        android:layout_alignRight="@+id/listaPaciente"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imageButton"
        android:background="@mipmap/ic_launcher"
        android:layout_marginLeft="43dp"
        android:layout_marginStart="43dp"
        android:layout_below="@+id/listaPaciente"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imageButton2"
        android:background="@mipmap/ic_launcher"
        android:layout_below="@+id/listaPaciente"
        android:layout_toLeftOf="@+id/libroReport"
        android:layout_toStartOf="@+id/libroReport" />

    <android.support.design.widget.TextInputLayout
        android:id="@+id/TiLayoutVolumen"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/imageButton2"
        android:layout_alignLeft="@+id/imageButton"
        android:layout_alignStart="@+id/imageButton"
        android:layout_alignRight="@+id/imageButton2"
        android:layout_alignEnd="@+id/imageButton2">

        <EditText android:id="@+id/TxtVolumen"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="numberDecimal"
            android:hint="@string/volumen"
            android:textColorHint="#ffffffff"
            android:textStyle="italic"
            android:selectAllOnFocus="true"
            android:textColor="#ffffffff"
            android:backgroundTint="#ffffffff"
            android:editable="true"
            android:layout_above="@+id/TxtTiempo"
            android:layout_alignRight="@+id/imageButton2"
            android:layout_alignEnd="@+id/imageButton2"
            android:layout_alignLeft="@+id/imageButton"
            android:layout_alignStart="@+id/imageButton" />
    </android.support.design.widget.TextInputLayout>



    <android.support.design.widget.TextInputLayout
        android:id="@+id/TiLayoutTiempo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/TiLayoutVolumen"
        android:layout_alignRight="@+id/imageButton2"
        android:layout_alignEnd="@+id/imageButton2"
        android:layout_alignLeft="@+id/TiLayoutVolumen"
        android:layout_alignStart="@+id/TiLayoutVolumen">

        <EditText android:id="@+id/TxtTiempo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="numberDecimal"
            android:textColorHint="#ffffffff"
            android:hint="@string/tiempo"
            android:textStyle="italic"
            android:selectAllOnFocus="true"
            android:textColor="#ffffffff"
            android:backgroundTint="#ffffffff"
            android:editable="true"
            android:layout_below="@+id/TiLayoutTiempo"
            android:layout_alignLeft="@+id/TxtVolumen"
            android:layout_alignStart="@+id/TxtVolumen"
            android:layout_alignRight="@+id/TxtVolumen"
            android:layout_alignEnd="@+id/TxtVolumen" />

    </android.support.design.widget.TextInputLayout>


    <Button
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="Calcular"
        android:id="@+id/btnCalcular"
        android:layout_below="@+id/TiLayoutTiempo"
        android:layout_alignLeft="@+id/TiLayoutTiempo"
        android:layout_alignStart="@+id/TiLayoutTiempo"
        android:layout_alignRight="@+id/TiLayoutTiempo"
        android:layout_alignEnd="@+id/TiLayoutTiempo" />

    <android.support.design.widget.TextInputLayout
        android:id="@+id/TiLayoutResultado"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/btnCalcular"
        android:layout_alignLeft="@+id/btnCalcular"
        android:layout_alignStart="@+id/btnCalcular"
        android:layout_marginTop="41dp"
        android:layout_alignRight="@+id/btnCalcular"
        android:layout_alignEnd="@+id/btnCalcular">

        <TextView android:id="@+id/TxtResultado"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="numberDecimal"
            android:textColorHint="#ffffffff"
            android:hint="@string/resultado"
            android:textStyle="italic"
            android:selectAllOnFocus="true"
            android:textColor="#ffffffff"
            android:backgroundTint="#ffffffff"
            android:editable="true"
            android:layout_below="@+id/TiLayoutTiempo"
            android:layout_alignLeft="@+id/TxtVolumen"
            android:layout_alignStart="@+id/TxtVolumen"
            android:layout_alignRight="@+id/TxtVolumen"
            android:layout_alignEnd="@+id/TxtVolumen" />

    </android.support.design.widget.TextInputLayout>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Enviar"
        android:id="@+id/btnEnviar"
        android:layout_below="@+id/TiLayoutResultado"
        android:layout_alignLeft="@+id/TiLayoutResultado"
        android:layout_alignStart="@+id/TiLayoutResultado"
        android:layout_alignRight="@+id/TiLayoutResultado"
        android:layout_alignEnd="@+id/TiLayoutResultado" />


</RelativeLayout>
