<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent"
    android:background="@color/color_backgroud">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="txtFechaHora"
        android:id="@+id/txtFechaHora"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="5dp"
        android:textColor="@color/color_texto" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="Observacion"
        android:id="@+id/txtObservacion"
        android:layout_below="@+id/txtFechaHora"
        android:layout_alignLeft="@+id/txtFechaHora"
        android:layout_alignStart="@+id/txtFechaHora"
        android:layout_marginLeft="45dp"
        android:textColor="@color/color_texto"
        android:layout_marginTop="5dp"
        android:textStyle="italic"
        android:layout_marginBottom="1dp" />

    <View
        android:layout_width="fill_parent"
        android:layout_height="1dp"
        android:background="#ffffff"
        android:layout_below="@+id/txtObservacion"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:id="@+id/lineaDivisoria"
        android:layout_marginTop="20dp" />

</RelativeLayout>
