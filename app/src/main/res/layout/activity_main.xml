<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".MainActivity">


    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imageBtnECG"
        android:layout_marginTop="80dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:background="@drawable/ic_logo_sim_hdpi"
        android:layout_marginLeft="40dp" />

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imageBtnAdmin"
        android:background="@drawable/ic_logo_sim_hdpi"
        android:layout_alignTop="@+id/imageBtnECG"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_marginRight="40dp"
        android:layout_marginEnd="73dp"
        android:layout_alignBottom="@+id/imageBtnECG" />

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imageBtReport"
        android:background="@drawable/ic_logo_sim_hdpi"
        android:layout_alignLeft="@+id/imageBtnECG"
        android:layout_toRightOf="@+id/imageBtnECG"
        android:layout_centerVertical="true" />

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imageBtMsg"
        android:background="@drawable/ic_logo_sim_hdpi"
        android:layout_alignLeft="@+id/imageBtnAdmin"
        android:layout_alignStart="@+id/imageBtnAdmin"
        android:layout_alignRight="@+id/imageBtnAdmin"
        android:layout_alignTop="@+id/imageBtReport" />


</RelativeLayout>
